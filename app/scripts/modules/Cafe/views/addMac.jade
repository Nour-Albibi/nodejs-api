.inset
  .tabpanel-container
    div(role='panel', layout='row' layout-fill layout-align='center center')
      md-card(flex=90)
        md-card-header
          md-card-header-text
            span.md-title {{vm.cafe.name}}
        md-card-content(layout='row' layout-padding)
          div(flex=60)
            div(layout='row')
              md-input-container
                label عنوان MAC
                input(dir='ltr' ng-model='vm.mac')
        md-card-actions(layout='row')
          span(flex)
          md-button.md-primary.md-raised(ng-click='vm.submit()') تعديل
          span(flex=5)
          md-button.md-warn.md-raised(ui-sref='^.list') إلغاء